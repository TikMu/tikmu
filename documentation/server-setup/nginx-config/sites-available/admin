server {
	listen 2000 ssl;
	listen [::]:2000 ssl;

	# Self signed certs generated by the ssl-cert package
	# Don't use them in a production server!
	include snippets/snakeoil.conf;

	server_name _;

	root /var/www/admin;

	location ~ \.n {
		fastcgi_split_path_info ^(.+\.n)(/.+)$;
		include fastcgi-tora.conf;
		fastcgi_pass 127.0.0.1:6666;
	}
}

